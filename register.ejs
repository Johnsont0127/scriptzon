<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register | ScriptZon</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/auth.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <a href="/" class="logo">ScriptZon</a>
        <h1>Create Account</h1>
        <p>Sign up to start generating AI-powered video scripts</p>
      </div>
      
      <% if(typeof errors != 'undefined') { %>
        <div class="alert alert-danger">
          <% errors.forEach(function(error) { %>
            <%= error.msg %>
          <% }); %>
        </div>
      <% } %>
      
      <form action="/users/register" method="POST" class="auth-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter your name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter your email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create a password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm your password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            required
          />
        </div>
        
        <% if(typeof referralCode != 'undefined' && referralCode) { %>
          <input type="hidden" name="referralCode" value="<%= referralCode %>" />
          <div class="referral-info">
            <i class="fas fa-user-friends"></i> You were referred by a friend
          </div>
        <% } %>
        
        <div class="form-group terms-checkbox">
          <input type="checkbox" id="terms" name="terms" required />
          <label for="terms">I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a></label>
        </div>
        
        <button type="submit" class="btn btn-primary btn-block">Create Account</button>
      </form>
      
      <div class="auth-footer">
        <p>Already have an account? <a href="/users/login">Log in</a></p>
      </div>
    </div>
  </div>
</body>
</html>
